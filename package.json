    "glob": "^10.3.10",
    "postcss": "^8.4.31",
    "postcss-modules": "^6.0.0",
    "posthtml": "^0.16.6",
    "posthtml-beautify": "^0.7.0",
    "posthtml-css-modules": "^0.1.3",
    "posthtml-modules": "^0.9.1",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-order": "^6.0.3"
  }
}
